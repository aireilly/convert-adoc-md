            <simpara>Do this:</simpara>
            <programlisting language="yaml" linenumbering="unnumbered">apiVersion: machineconfiguration.openshift.io/v1
                kind: KubeletConfig
                <co xml:id="CO2-1" />
                metadata:
                name: worker-tuning
                spec:
                <co xml:id="CO2-2" />
                machineConfigPoolSelector:
                matchLabels:
                pools.operator.machineconfiguration.openshift.io/worker: ""
                kubeletConfig:
                cpuManagerPolicy: "static"
                cpuManagerReconcilePeriod: "5s"
                <co xml:id="CO2-3" />
                reservedSystemCPUs: "0,1"
                memoryManagerPolicy: "Static"
                evictionHard:
                memory.available: "100Mi"
                <co xml:id="CO2-4" />
                kubeReserved:
                memory: "512Mi"
                reservedMemory:
                - numaNode: 0
                limits:
                memory: "1124Mi"
                <co xml:id="CO2-5" />
                systemReserved:
                memory: "512Mi"
                topologyManagerPolicy: "single-numa-node"</programlisting>
